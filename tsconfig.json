{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "preserveWatchOutput": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
